{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "noUnusedLocals": false, // You already have this correctly set
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": false,
    "jsx": "preserve", // Important for Vue files
    "isolatedModules": true, // Helps with transpilation
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowSyntheticDefaultImports": true, // Helpful for imports
    "skipLibCheck": true, // Reduces false positives
    "types": ["vite/client"] // Important if using Vite
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
